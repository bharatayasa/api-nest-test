generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  name      String
  email     String
  password  String
  role      Role     @default(user)
  createdAt DateTime @default(now())
  news      News[]   @relation("UserNews")
}

model NewsCategory {
  id         Int       @id @default(autoincrement())
  name       String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  news       News[]
}

model News {
  id          Int          @id @default(autoincrement())
  title       String
  content     String
  category    NewsCategory? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
  createdBy   User         @relation("UserNews", fields: [createdById], references: [id])
  createdById Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}
